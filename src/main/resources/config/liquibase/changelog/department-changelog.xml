<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-department-table" author="pascal">
        <createSequence sequenceName="department_sequence" startValue="1" incrementBy="1"/>

        <createTable tableName="department">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="char(2)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addDefaultValue tableName="department"
                         columnName="id"
                         defaultValueSequenceNext="department_sequence"/>
    </changeSet>

</databaseChangeLog>
